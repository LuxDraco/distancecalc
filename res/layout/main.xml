<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:myapp="http://schemas.android.com/apk/res/com.gebogebo.android.distancecalcfree"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:background="#000000"
	android:layout_height="fill_parent">
	
    <com.admob.android.ads.AdView
        android:id="@+id/ad"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        myapp:backgroundColor="#FFFFFF"
        myapp:primaryTextColor="#000000"
        myapp:secondaryTextColor="#CCCCCC" />
		
    <TextView
        android:id="@+drawable/errors"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8sp"
        android:paddingBottom="8sp"
        android:gravity="center"
        android:textSize="@dimen/smallTextSize" />
        
    <TextView
        android:id="@+drawable/action_display"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8sp"
        android:paddingBottom="8sp"
        android:background="#FFFFFF"
        android:textColor="#000000"
        android:gravity="center"
        android:text="@string/dots"
        android:textSize="@dimen/smallTextSize" />
	
	<TextView
        android:id="@+drawable/distance"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:padding="8sp"
		android:layout_marginTop="30sp"
		android:gravity="center|top"
		android:layout_weight="2"
		android:background="#000000"
		android:textSize="@dimen/largeTextSize"
        android:text="@string/dots" />
        
    <TextView
        android:id="@+drawable/currentSpeed"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="0.3"
        android:background="#000000"
        android:textSize="@dimen/smallTextSize"
        android:text="@string/dots" />
        
    <TextView
        android:id="@+drawable/timeElapsed"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="0.3"
        android:layout_gravity="top"
        android:background="#000000"
        android:textSize="@dimen/smallTextSize"
        android:layout_marginBottom="30sp"
        android:text="" />
        
        
    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent"
        android:layout_height="wrap_content" android:background="#000000" android:layout_weight="0.30">
            <Button 
		        android:id="@+drawable/pause"
		        android:text="@string/pause"
		        android:layout_margin="3sp"
		        android:layout_height="fill_parent"
		        android:layout_width="fill_parent"
		        android:gravity="center"
		        android:layout_gravity="center"
		        android:layout_weight="0.5"
		        android:textSize="@dimen/smallTextSize"
		    />
		    
            <Button 
                android:id="@+drawable/button"
                android:text="@string/start"
                android:layout_margin="3sp"
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:textSize="@dimen/smallTextSize"
            />
    </LinearLayout>    
</LinearLayout>
