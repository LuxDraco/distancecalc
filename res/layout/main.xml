<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:myapp="http://schemas.android.com/apk/res/com.gebogebo.android.distancecalc"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	
    <com.admob.android.ads.AdView
        android:id="@+id/ad"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        myapp:backgroundColor="#FFFFFF"
        myapp:primaryTextColor="#000000"
        myapp:secondaryTextColor="#CCCCCC" />
		
    <TextView
        android:id="@+drawable/errors"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10px"
        android:paddingBottom="10px"
        android:gravity="center"
        android:textSize="15px" />
	
	<TextView
        android:id="@+drawable/distance"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:padding="15px"
		android:gravity="center"
		android:layout_weight="1"
		android:textSize="28px"
        android:text="@string/dots" />
        
    <TextView
        android:id="@+drawable/currentSpeed"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="15px"
        android:gravity="center"
        android:layout_weight="1"
        android:textSize="18px"
        android:text="@string/dots" />

    <Button 
        android:id="@+drawable/button"
        android:text="@string/start"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_margin="10px"
        android:padding="30px"
        android:gravity="center"
        android:textSize="20px"
    />
    
</LinearLayout>
